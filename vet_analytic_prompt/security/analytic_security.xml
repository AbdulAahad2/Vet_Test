<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- ========================================= -->
        <!-- RULE 1: Doctors - Only show doctors assigned to user's branches -->
        <!-- ========================================= -->
        <record id="rule_vet_animal_doctor_analytic" model="ir.rule">
            <field name="name">Doctors: Filter by User's Analytic Accounts</field>
            <field name="model_id" ref="vet_test.model_vet_animal_doctor"/>
            <field name="domain_force">
                [('analytic_account_id', 'in', user.analytic_account_ids.ids)]
            </field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- ========================================= -->
        <!-- RULE 2: Visits - Only show visits for user's branches -->
        <!-- ========================================= -->
        <record id="rule_vet_animal_visit_analytic" model="ir.rule">
            <field name="name">Visits: Filter by User's Analytic Accounts</field>
            <field name="model_id" ref="vet_test.model_vet_animal_visit"/>
            <field name="domain_force">
                [('analytic_account_id', 'in', user.analytic_account_ids.ids)]
            </field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- ========================================= -->
        <!-- RULE 3: Invoices - Only show invoices for user's branches -->
        <!-- ========================================= -->
        <record id="rule_account_move_analytic" model="ir.rule">
            <field name="name">Invoices: Filter by User's Analytic Accounts</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="domain_force">
                ['|', 
                    ('analytic_account_id', 'in', user.analytic_account_ids.ids),
                    ('move_type', '!=', 'out_invoice')
                ]
            </field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    </data>
</odoo>
