<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add image field to analytic accounts -->
    <record id="analytic_account_image_field" model="ir.ui.view">
        <field name="name">account.analytic.account.form.inherit</field>
        <field name="model">account.analytic.account</field>
        <field name="inherit_id" ref="analytic.view_account_analytic_account_form"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="image" widget="image" class="oe_avatar"/>
            </field>
        </field>
    </record>

    <!-- Kanban view - POS STYLE + OPEN REGISTER BUTTON -->
    <record id="analytic_account_kanban_view" model="ir.ui.view">
        <field name="name">account.analytic.account.kanban</field>
        <field name="model">account.analytic.account</field>
        <field name="arch" type="xml">
            <kanban class="o_analytic_dashboard">
                <field name="name"/>
                <field name="image"/>
                <field name="id" invisible="1"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card analytic-select-card" 
                             t-att-data-id="record.id" 
                             t-att-data-name="record.name">
                            <div class="oe_kanban_image_wrapper">
                                <img t-if="record.image.raw_value" t-att-alt="record.name" t-att-src="kanban_image('account.analytic.account', 'image', record.id.value)" class="oe_kanban_image"/>
                                <div t-else="" class="oe_kanban_image oe_kanban_image_placeholder"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title"><field name="name"/></strong>
                                <div class="text-success fw-bold mb-1">üè• BRANCH</div>
                                <button type="object" 
                                        name="action_open_register" 
                                        class="btn btn-primary btn-sm w-100 mt-2"
                                        title="Open Visit Register">
                                    üîî OPEN VISIT REGISTER
                                </button>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action - KANBAN ONLY -->
    <record id="analytic_dashboard_action" model="ir.actions.act_window">
        <field name="name">Analytic Dashboard</field>
        <field name="res_model">account.analytic.account</field>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="analytic_account_kanban_view"/>
    </record>

    <!-- Under Vet Management -->
    <menuitem id="analytic_dashboard_menu"
              name="Analytic Dashboard"
              action="analytic_dashboard_action"
              parent="vet_test.menu_vet"
              sequence="5"/>

    <!-- Add analytic to invoice tree view -->
    <record id="view_move_tree_inherit_analytic" model="ir.ui.view">
        <field name="name">account.move.tree.inherit.analytic</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="analytic_display" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>

